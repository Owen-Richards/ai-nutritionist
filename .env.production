# Production Security Configuration

# Environment variables for secure production deployment
ENVIRONMENT=prod
LOG_LEVEL=INFO
ENABLE_DEBUG=false

# AWS Configuration
AWS_DEFAULT_REGION=us-east-1
ENABLE_VPC=true
ENABLE_WAF=true
ENABLE_XRAY_TRACING=true

# Security Settings
ENABLE_ENCRYPTION_AT_REST=true
ENABLE_ENCRYPTION_IN_TRANSIT=true
ENFORCE_HTTPS=true
ENABLE_SECRETS_MANAGER=true

# DynamoDB Security
DYNAMODB_POINT_IN_TIME_RECOVERY=true
DYNAMODB_BACKUP_RETENTION_DAYS=30
DYNAMODB_DELETION_PROTECTION=true

# Lambda Security
LAMBDA_RESERVED_CONCURRENCY=100
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY_SIZE=512
LAMBDA_DEAD_LETTER_QUEUE=true

# API Gateway Security
API_GATEWAY_THROTTLING_RATE=1000
API_GATEWAY_THROTTLING_BURST=2000
API_GATEWAY_CACHING_ENABLED=true
API_GATEWAY_CACHE_TTL=300

# Monitoring & Alerting
CLOUDWATCH_LOG_RETENTION_DAYS=30
ENABLE_COST_ALERTS=true
COST_ALERT_THRESHOLD=500
ENABLE_ERROR_ALERTS=true
ERROR_RATE_THRESHOLD=5

# Compliance
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=730
AUDIT_LOGGING_ENABLED=true

# Performance
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
ENABLE_COMPRESSION=true

# Business Settings
ENABLE_PREMIUM_FEATURES=true
ENABLE_AFFILIATE_TRACKING=true
ENABLE_REVENUE_ANALYTICS=true
FREE_TIER_MEAL_PLANS=3
PREMIUM_TIER_UNLIMITED=true
