# AI Performance Configuration Template
# Copy this to .env and customize for your environment

# AI Model Configuration
DEFAULT_AI_MODEL=anthropic.claude-3-haiku-20240307-v1:0
AI_COST_OPTIMIZATION=true
AI_QUALITY_THRESHOLD=8.0
AI_MAX_COST_PER_REQUEST=0.05

# Model Performance Tuning
AI_CACHE_TTL_HOURS=24
AI_BATCH_SIZE=5
AI_PARALLEL_REQUESTS=3
AI_CIRCUIT_BREAKER_THRESHOLD=3
AI_CIRCUIT_BREAKER_TIMEOUT_MINUTES=5

# Prompt Optimization
PROMPT_TOKEN_LIMIT=4000
PROMPT_OPTIMIZATION_ENABLED=true
PROMPT_CACHING_ENABLED=true

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
METRICS_COLLECTION_INTERVAL=300
PERFORMANCE_ALERTS_ENABLED=true

# Cost Controls
COST_MONITORING_ENABLED=true
DAILY_COST_LIMIT=10.00
MONTHLY_COST_LIMIT=300.00
COST_ALERT_THRESHOLD=0.80

# User Tier Settings
FREE_TIER_DAILY_REQUESTS=50
STANDARD_TIER_DAILY_REQUESTS=200
PREMIUM_TIER_DAILY_REQUESTS=1000

# Advanced Features
MULTI_MODEL_FALLBACK=true
INTELLIGENT_CACHING=true
REQUEST_PRIORITIZATION=true
BACKGROUND_OPTIMIZATION=true

# Development Settings
AI_DEBUG_MODE=false
LOG_AI_REQUESTS=true
SIMULATE_FAILURES=false
