# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# AWS Configuration
AWS_DEFAULT_REGION=us-east-1
AWS_PROFILE=default

# Messaging Provider Selection (UPDATED for Pinpoint deprecation)
# Pinpoint is deprecated (EOL: Oct 30, 2026). Use alternatives:
MESSAGING_PROVIDER=twilio  # RECOMMENDED: twilio | whatsapp_cloud
# DEPRECATED: pinpoint (fallback only until Oct 30, 2026)

# Twilio Configuration (for local testing / production)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_SMS_FROM=+12025550123
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_WEBHOOK_URL=https://your-api-gateway.execute-api.region.amazonaws.com/dev/webhook
TWILIO_WEBHOOK_VALIDATION=true

# WhatsApp Cloud API (Meta)
# MESSAGING_PROVIDER=whatsapp_cloud
WHATSAPP_CLOUD_ACCESS_TOKEN=your_meta_access_token
WHATSAPP_CLOUD_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_CLOUD_APP_SECRET=your_app_secret
WHATSAPP_CLOUD_WEBHOOK_VALIDATION=true

# DynamoDB Configuration (for local testing)
DYNAMODB_TABLE_NAME=ai-nutritionist-users-dev
DYNAMODB_ENDPOINT_URL=http://localhost:8000  # For local DynamoDB

# Bedrock Configuration
BEDROCK_MODEL_ID=amazon.titan-text-express-v1
BEDROCK_REGION=us-east-1

# Development Settings
LOG_LEVEL=DEBUG
PYTHONPATH=./src

# Note: In production, values are retrieved from AWS Systems Manager Parameter Store
# and/or AWS Secrets Manager. This file is only for local development.
