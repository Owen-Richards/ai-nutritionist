# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# AWS Configuration
AWS_DEFAULT_REGION=us-east-1
AWS_PROFILE=default

# Twilio Configuration (for local testing)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# DynamoDB Configuration (for local testing)
DYNAMODB_TABLE_NAME=ai-nutritionist-users-dev
DYNAMODB_ENDPOINT_URL=http://localhost:8000  # For local DynamoDB

# Bedrock Configuration
BEDROCK_MODEL_ID=amazon.titan-text-express-v1
BEDROCK_REGION=us-east-1

# Development Settings
LOG_LEVEL=DEBUG
PYTHONPATH=./src

# Note: In production, these values are retrieved from AWS Systems Manager Parameter Store
# and AWS Lambda environment variables. This file is only for local development.
